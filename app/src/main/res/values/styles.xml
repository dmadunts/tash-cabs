<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/subheader_text_size</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/medium_space</item>
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetStyle" parent="TextInputEditTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WarningStyle" parent="TextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="background">@color/whitish</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginBottom">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/small_space</item>
    </style>

    <style name="StatusTextView">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/large_space</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
    </style>

    <style name="BottomSheetTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/large_space</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:layout_marginEnd">@dimen/large_space</item>
        <item name="android:background">@color/grayish</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
